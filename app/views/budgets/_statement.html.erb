      <font color="black"> <%== $total_income %>$</font>
    </td>

  </tr>


  <tr>
    <td >
      <a href=http://localhost:3000/show_statement/show9>Total</a>
    </td>
    <td >
      <% if $total_income < $total_all %>
          <font color="red"> <%== $total_all %>$</font>
      <% else %>
          <font color="black">  <%= $total_all %>$   </font>
      <% end %>

